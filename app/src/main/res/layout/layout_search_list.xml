<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llStatements"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="10dp"
    android:elevation="10dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rl1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <ImageView
                android:id="@+id/ivVoiceStatements"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/loud_speaker" />

            <TextView
                android:id="@+id/tvStatement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="You should go there"
                android:fontFamily="@font/oxygen_regular"
                android:textColor="@color/theme_color"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/ivVoiceStatements" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl1">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_centerVertical="true"
                android:background="@color/border_grey" />

            <ImageView
                android:id="@+id/ivBoth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/megaphone"
                android:layout_centerVertical="true"
                android:layout_marginLeft="50dp" />

            <ImageView
                android:id="@+id/iv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/favorite_black_24dp"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl2"
            android:layout_margin="10dp">

            <ImageView
                android:id="@+id/ivVoiceTranslation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/loud_speaker"
                android:layout_centerVertical="true" />

            <TextView
                android:id="@+id/tvTranslation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="You should go there"
                android:fontFamily="@font/oxygen_regular"
                android:textColor="@color/theme_color"
                android:gravity="center"
                android:layout_toRightOf="@+id/ivVoiceTranslation"
                android:layout_centerVertical="true" />
        </RelativeLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>